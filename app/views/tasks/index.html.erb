<h1>Here are your tasks:</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.title %>
      <%= task.completed %>
      <%= link_to "View details", task_path(task) %>
      <%= link_to "Edit task", edit_task_path(task) %>
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
 <%= link_to "Create task", new_task_path %>
